# Environment Configuration
NODE_ENV=development
PORT=3000

# MongoDB Configuration
MONGO_URI=mongodb://localhost:27017/cinematrix

# Redis Configuration
REDIS_URL=redis://localhost:6379

# JWT Configuration
# For RS256 (asymmetric) - Generate with: openssl genrsa -out private.pem 2048 && openssl rsa -in private.pem -pubout -out public.pem
ACCESS_TOKEN_PRIVATE_KEY="-----BEGIN RSA PRIVATE KEY-----\n...\n-----END RSA PRIVATE KEY-----"
ACCESS_TOKEN_PUBLIC_KEY="-----BEGIN PUBLIC KEY-----\n...\n-----END PUBLIC KEY-----"

# For HS256 (symmetric) - fallback
REFRESH_TOKEN_SECRET=your-super-secret-refresh-token-key-change-in-production

# Client URL (for CORS)
CLIENT_URL=http://localhost:5173
